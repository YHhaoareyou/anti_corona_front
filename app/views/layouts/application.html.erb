<!DOCTYPE html>
<html>
  <head>
    <title><%= t('menu.brand') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='m-0' style='background-color: #eee;'>
    <% if current_user %>
      <nav class="navbar navbar-dark navbar-expand-lg bg-success mb-2">
        <a class="navbar-brand" href="/"><%= t('menu.brand') %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon text-white"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-white" href="/"><%= t('menu.all_posts') %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/followed_posts"><%= t('menu.followed_posts') %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/my_posts"><%= t('menu.my_posts') %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout"><%= t('menu.logout') %></a>
            </li>
            <li class="nav-item">
              <%= link_to "#{t('devise.form.edit_title')}", edit_user_registration_path, class: 'nav-link text-white' %>
            </li>
          </ul>
        </div>
      </nav>
    <% else %>
      <div class="jumbotron bg-success text-center">
        <h2 class="display-4 text-white"><%= t('home.title') %></h2>
        <p class="lead text-white"><%= t('home.subtitle') %></p>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-10 offset-1'>
        <% if notice %>
          <div class='text-center border border-info py-2 mb-2 text-info' id="notice" style='border: 1px solid blue; border-radius: 5px;'><%= notice %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
