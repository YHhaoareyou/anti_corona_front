<!DOCTYPE html>
<html>
  <head>
    <title>Quarantine Supplies Exchange</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='m-0' style='background-color: #eee;'>
    <% if current_user %>
      <nav class="navbar navbar-dark navbar-expand-lg bg-success mb-2">
        <a class="navbar-brand" href="/">Anti-Corona Front</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon text-white"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-white" href="/">All Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/followed_posts">Followed Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/my_posts">My Posts</a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout">Log Out</a>
            </li>
          </ul>
        </div>
      </nav>
    <% else %>
      <div class="jumbotron bg-success text-center">
        <h1 class="display-4 text-white">Fight against Corona togather!</h1>
        <p class="lead text-white">Simple Platform for Quarantine Supplies Exchange</p>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-10 offset-1'>
        <% if notice %>
          <div class='text-center border border-info py-2 mb-2 text-info' id="notice" style='border: 1px solid blue; border-radius: 5px;'><%= notice %></div>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
