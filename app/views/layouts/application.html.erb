<!DOCTYPE html>
<html>
  <head>
    <title><%= t('menu.brand') %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= display_meta_tags(default_meta_tags) %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://kit.fontawesome.com/9a316b2f6b.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class='m-0' style='background-color: #eee;'>
    <% if current_user %>
      <nav class="navbar navbar-dark navbar-expand-lg bg-success mb-2">
        <a class="navbar-brand" href="/"><%= t('menu.brand') %></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon text-white"></span>
        </button>

        <div class="collapse navbar-collapse" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link text-white" href="/"><i class="fas fa-home"></i> <%= t('menu.all_posts') %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/followed_posts"><i class="far fa-star"></i> <%= t('menu.followed_posts') %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/my_posts"><i class="far fa-user"></i> <%= t('menu.my_posts') %></a>
            </li>
          </ul>

          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a class="nav-link text-secondary disabled"><%= @region %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link text-white" href="/logout"><i class="fas fa-user-alt-slash"></i> <%= t('menu.logout') %></a>
            </li>
            <li class="nav-item">
              <%= link_to edit_user_registration_path, class: 'nav-link text-white' do %>
                <i class="fas fa-user-edit"></i> <%= t('devise.form.edit_title') %>
              <% end %>
            </li>
          </ul>
        </div>
      </nav>
    <% else %>
      <div class="jumbotron bg-success text-center py-5">
        <h2 class="display-4 text-white"><%= t('home.title') %></h2>
        <h5 class="lead text-white"><%= t('home.subtitle') %></h5>
        <h5 class="lead text-white"><%= t('home.subtitle2') %></h5>
      </div>
    <% end %>
    <div class='row'>
      <div class='col-10 offset-1'>
        <% if notice %>
          <div class='text-center border border-info py-2 mb-2 text-info' id="notice" style='border: 1px solid blue; border-radius: 5px;'><%= notice %></div>
        <% end %>
        <%= yield %>
      </div>

      <% unless current_user %>
        <div class='col-10 offset-1 col-lg-6 offset-lg-3 mt-3 text-secondary'>
          <div class="card mb-2">
            <div class="card-header" id="AboutHeading" style='cursor: pointer;' data-toggle="collapse" data-target="#aboutCollapse" aria-expanded="true" aria-controls="aboutCollapse">
              <h4 class="mb-0">
                <%= t 'about_title' %>
              </h4>
            </div>

            <div id="aboutCollapse" class="collapse" aria-labelledby="AboutHeading">
              <div class="card-body">
                <h6 class='mb-4'><%= t 'about1' %></h6>
                <h6 class='mb-4'><%= t 'about2' %></h6>
                <h6 class='mb-4'><%= t 'about3' %></h6>
                <p class='mb-2'><%= t 'about4' %></p>
                <p class='mb-2'><%= t 'about5' %></p>
              </div>
            </div>
          </div>
          <p class='text-danger'><%= t 'disclaimer1' %></p>
          <p class='text-danger'><%= t 'disclaimer2' %></p>
        </div>
      <% end %>
    </div>

    <div class='text-right' style='position: absolute; right: 2px; bottom: 2px;'>
      <a class='btn btn-light btn-sm' href='https://github.com/YHhaoareyou/anti_corona_front' target='_blank'>
        <i class="fab fa-github"></i>
      </a>
    </div>

  </body>
</html>
