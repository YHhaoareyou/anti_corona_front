<%= form_with(model: post, local: true, class: 'row') do |form| %>
  <div class='col-8 offset-2'>
    <% if post&.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='row'>
      <div class='col-5'>
        <h3>I need...</h3>
        <div class="form-group">
          Mask (pieces):<%= form.text_field :demand_mask, class: 'form-control' %>
        </div>
        <div class="form-group">
          Medical mask (pieces):<%= form.text_field :demand_medical_mask, class: 'form-control' %>
        </div>
        <div class="form-group">
          Hand sanitizer spray (ml):<%= form.text_field :demand_hand_sanitizer_spray, class: 'form-control' %>
        </div>
        <div class="form-group">
          Hand sanitizer gel (ml):<%= form.text_field :demand_hand_sanitizer_gel, class: 'form-control' %>
        </div>
        <div class="form-group">
          Alcohol wet wipe (pieces):<%= form.text_field :demand_alcohol_wet_wipe, class: 'form-control' %>
        </div>
        <div class="form-group">
          Tissue paper (boxes):<%= form.text_field :demand_tissue_paper, class: 'form-control' %>
        </div>
        <div class="form-group">
          Toilet paper (rolls):<%= form.text_field :demand_toilet_paper, class: 'form-control' %>
        </div>
        <div class="form-group">
          Other:<%= form.text_field :demand_other, class: 'form-control' %>
        </div>
      </div>

      <div class='col-5 offset-1'>
        <h3>I can provide...</h3>
        <div class="form-group">
          Mask (pieces):<%= form.text_field :supply_mask, class: 'form-control' %>
        </div>
        <div class="form-group">
          Medical mask (pieces):<%= form.text_field :supply_medical_mask, class: 'form-control' %>
        </div>
        <div class="form-group">
          Hand sanitizer spray (ml):<%= form.text_field :supply_hand_sanitizer_spray, class: 'form-control' %>
        </div>
        <div class="form-group">
          Hand sanitizer gel (ml):<%= form.text_field :supply_hand_sanitizer_gel, class: 'form-control' %>
        </div>
        <div class="form-group">
          Alcohol wet wipe (pieces):<%= form.text_field :supply_alcohol_wet_wipe, class: 'form-control' %>
        </div>
        <div class="form-group">
          Tissue paper (boxes):<%= form.text_field :supply_tissue_paper, class: 'form-control' %>
        </div>
        <div class="form-group">
          Toilet paper (rolls):<%= form.text_field :supply_toilet_paper, class: 'form-control' %>
        </div>
        <div class="form-group">
          Other:<%= form.text_field :supply_other, class: 'form-control' %>
        </div>
      </div>

      <div class='col-8'>
        <div class="form-group">
          Preferred Exchange Method:<span class='px-3'></span>
          Mail <%= form.radio_button :exchange_method, "Mail" %><span class='px-3'></span>
          In person <%= form.radio_button :exchange_method, "In person" %><span class='px-3'></span>
          Both <%= form.radio_button :exchange_method, "Both" %>
        </div>
        <div class="form-group">
          Preferred Exchange Date & Time:<%= form.text_area :preferred_date_time, class: 'form-control' %>
        </div>
        <div class="form-group">
          Preferred Exchange Place (not need to fill in if you choose to exchange with mail):<%= form.text_area :preferred_place, class: 'form-control' %>
        </div>
      </div>

      <div class="col-4 actions">
        <br />
        <%= form.submit class: 'btn btn-success' %>
      </div>
    </div>

  </div>
<% end %>
