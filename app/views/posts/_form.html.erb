<%= form_with(model: post, local: true, class: 'row') do |form| %>
  <div class='col-8 offset-2'>
    <% if post&.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class='row'>
      <div class='col-5'>
        <h3>I need...</h3>

        <% suppliments_names_units.each do |key, name_unit| %>
          <% next if key == 'other' %>
          <div class="form-group">
            <%= "#{name_unit['eng_name']} (#{name_unit['eng_unit']}):" %>
            <%= form.text_field "demand_#{key}".to_sym, class: 'form-control' %>
          </div>
        <% end %>

        <div class="form-group">
          Other:<%= form.text_field :demand_other, class: 'form-control' %>
        </div>
      </div>

      <div class='col-5 offset-1'>
        <h3>I can provide...</h3>

        <% suppliments_names_units.each do |key, name_unit| %>
          <% next if key == 'other' %>
          <div class="form-group">
            <%= "#{name_unit['eng_name']} (#{name_unit['eng_unit']}):" %>
            <%= form.text_field "supply_#{key}".to_sym, class: 'form-control' %>
          </div>
        <% end %>

        <div class="form-group">
          Other:<%= form.text_field :supply_other, class: 'form-control' %>
        </div>
      </div>

      <div class='col-8'>
        <div class="form-group">
          Preferred Exchange Method:<span class='px-3'></span>
          Mail <%= form.radio_button :exchange_method, "Mail" %><span class='px-3'></span>
          In person <%= form.radio_button :exchange_method, "In person" %><span class='px-3'></span>
          Both <%= form.radio_button :exchange_method, "Both" %>
        </div>
        <div class="form-group">
          Preferred Exchange Date & Time:<%= form.text_area :preferred_date_time, class: 'form-control' %>
        </div>
        <div class="form-group">
          Preferred Exchange Place (not need to fill in if you choose to exchange with mail):<%= form.text_area :preferred_place, class: 'form-control' %>
        </div>
      </div>

      <div class="col-4 actions">
        <br />
        <%= form.submit class: 'btn btn-success' %>
      </div>
    </div>

  </div>
<% end %>
