<div class='row mt-3'>
  <div class='col-lg-4'>
    <h4>I need...</h4>
    <% @post.demand.attributes.except!('id', 'post_id', 'created_at', 'updated_at').compact.each do |key, count| %>
      <p><%= suppliments_names_units[key]['eng_name'] %> <%= count %> <%= suppliments_names_units[key]['eng_unit'] %></p>
    <% end %>

    <br />
    <hr />

    <h4>I can provide...</h4>
    <% @post.supply.attributes.except!('id', 'post_id', 'created_at', 'updated_at').compact.each do |key, count| %>
      <p><%= suppliments_names_units[key]['eng_name'] %> <%= count %> <%= suppliments_names_units[key]['eng_unit'] %></p>
    <% end %>

    <br />
    <hr />

    <h4>How to exchange...</h4>
    <p><%= @post.exchange_method == 'Both' ? 'Mail or In Person' : @post.exchange_method %></p>

    <h4>Let's exchange at...</h4>
    <p>Place: <%= @post.preferred_place %></p>
    <p>Date & Time: <%= @post.preferred_date_time %></p>
  </div>

  <div class='col-lg-6'>
    <!-- Chat -->
  </div>
</div>

<% if current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post) %>
  <% if @post.open_status == 1 %>
    <%= button_to 'Close', "/posts/close/#{@post.id}" %>
  <% else %>
    <%= button_to 'Reopen', "/posts/reopen/#{@post.id}" %>
  <% end %>
  <%#= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>

<%= link_to 'Back', posts_path %>
