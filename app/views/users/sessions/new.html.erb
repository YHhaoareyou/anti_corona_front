<div class='row'>
  <div class='col-lg-4 offset-lg-4 col-10 offset-1 card p-3'>
    <div class="card-body">
      <h2 class="card-title"><%= t('devise.form.log_in_title') %></h2>
      <hr />

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field row">
          <h5 class='col-lg-4'><%= f.label :email, t('devise.form.email'), class: 'col-lg-form-label' %></h5>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-7' %>
        </div>

        <div class="field row">
          <h5 class='col-lg-4'><%= f.label :password, t('devise.form.password'), class: 'col-lg-form-label' %></h5>
          <%= f.password_field :password, autocomplete: "current-password", class: 'form-control col-lg-7' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field form-check form-check-inline">
            <%= f.label :remember_me, t('devise.form.remember_me'), class: 'form-check-label' %>
            <%= f.check_box :remember_me, class: 'form-check-input ml-2' %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "#{t('devise.form.log_in_submit')}", class: 'btn btn-success' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    <div>
  </div>
</div>
