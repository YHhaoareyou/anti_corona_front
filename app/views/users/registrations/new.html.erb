<div class='row'>
  <div class='col-lg-4 offset-lg-4 col-10 offset-1 card p-3'>
    <div class="card-body">
      <h2 class="card-title"><%= t('devise.form.sign_up_title') %></h2>
      <hr />

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field row">
          <h5 class='col-lg-4'><%= f.label :email, t('devise.form.email'), class: 'col-lg-form-label' %></h5>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control col-lg-7' %>
        </div>

        <div class="field row">
          <h5 class='col-lg-4'><%= f.label :password, t('devise.form.password'), class: 'col-lg-form-label' %></h5>
          <%= f.password_field :password, autocomplete: "new-password", class: 'form-control col-lg-7' %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>

        <div class="field row">
          <h5 class='col-lg-4'><%= f.label :password_confirmation, t('devise.form.password_confirmation'), class: 'col-lg-form-label' %></h5>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control col-lg-7' %>
        </div>

        <div class="actions">
          <%= f.submit "#{t('devise.form.sign_up_submit')}", class: 'btn btn-warning' %>
        </div>
      <% end %>

      <%= render "users/shared/links" %>
    <div>
  </div>
</div>
